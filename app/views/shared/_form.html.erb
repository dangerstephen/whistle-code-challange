<div class="row">
<div class="form">

<%= form_for @dog do |f| %>
<div class="form-group">
    <%= f.text_field :name, class:"form-control", placeholder:"Dog Name", required: true %>
</div>

<div class="form-group">
    <%= f.text_field :image_src, class:"form-control", placeholder:"Image", required: true %>
</div>

<div class="form-group">
    <%= f.text_area :bio, class:"form-control", placeholder:"Bio" %>
</div>

<div class="form-group">
    <%= f.submit "Save Dog", class:"btn btn-primary" %>
</div>

<% end %>

</div>
</div>
